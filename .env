# Server
PORT=7043
NODE_ENV=development
CORS_ORIGIN=*
SERVICE_NAME=ors-payment-service

# MongoDB
MONGODB_URI=mongodb://localhost:27017/payment-db

# API Key (for gateway authentication) - comma-separated list
VALID_API_KEYS=payment-gateway-key-2024,gateway-to-payment-key-2024

# Encryption (32 bytes for AES-256)
ENCRYPTION_KEY=ors-payment-encryption-key-2024!

# BIN API (optional)
BIN_API_URL=https://api.orsmod.com/bin

# Callback Base URL
CALLBACK_BASE_URL=https://payment.orsmodule.com

# Frontend URL (for postMessage and redirects)
FRONTEND_URL=http://localhost:5173
